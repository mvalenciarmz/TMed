<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mvalenciarmz.com.tarjetamedica.AltaPersonaActivity"
    android:weightSum="1">

    <TableRow>
        <EditText
            android:id="@+id/nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nombre"
            android:inputType="text" />
    </TableRow>

    <TableRow android:layout_marginTop="30px">
        <EditText
            android:id="@+id/paterno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Apellido Paterno"
            android:inputType="text" />
        <EditText
            android:id="@+id/materno"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Apellido Materno"
            android:inputType="text" />
    </TableRow>

    <TableRow android:layout_marginTop="30px">
        <EditText
            android:id="@+id/numSegSocial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Número de Seguridad Social"
            android:inputType="text" />
    </TableRow>

    <TableRow android:layout_marginTop="30px">
        <EditText
            android:id="@+id/curp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="CURP"
            android:inputType="text" />
    </TableRow>

    <TableRow android:layout_marginTop="30px">
        <EditText
            android:id="@+id/unidadMedica"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Unidad Médica"
            android:inputType="text" />
        <EditText
            android:id="@+id/consultorio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="No. Consultorio"
            android:inputType="text" />
    </TableRow>

    <TableRow android:layout_marginTop="30px">
        <Spinner
            android:id="@+id/horario"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:entries="@array/horario">
        </Spinner>
        <Spinner
            android:id="@+id/sexo"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:entries="@array/sexo">
        </Spinner>
    </TableRow>

    <TableRow android:layout_marginTop="30px">
        <EditText
            android:id="@+id/tipoSangre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Tipo de Sangre"
            android:inputType="text" />
        <Button
            android:id="@+id/fechaNacimiento"
            android:onClick="btnFechaNacimiento"
            android:text="Fecha Nacimiento"
            />

    </TableRow>

    <TableRow android:layout_marginTop="30px">
        <EditText
            android:id="@+id/observaciones"
            android:layout_height="wrap_content"
            android:hint="Observaciones"
            android:inputType="textMultiLine"
            android:lines="3"
            android:layout_weight="1"
            android:layout_width="fill_parent">
        </EditText>
    </TableRow>

</TableLayout>
